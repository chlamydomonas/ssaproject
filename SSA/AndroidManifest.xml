<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sds.ssa"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <permission 
        android:label="Test Permission" 
        android:name="sdsssa.permission.TEST" 
        android:description="@string/title_main" 
        android:protectionLevel="normal">
    </permission>

	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/title_icon"
        android:label="@string/app_name"
        android:name="com.sds.ssa.vo.UserInfo" >
        <activity
            android:name="com.sds.ssa.activity.BasActivity"
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
            android:label="@string/title_main"
            android:theme="@style/AppBaseTheme"
			android:permission="sdsssa.permission.TEST" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
<!--                 <category android:name="android.intent.category.LAUNCHER" /> -->
            </intent-filter>
        </activity>
        <activity
            android:name="com.sds.ssa.phone.PhoneActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.sds.ssa.fragment.app.DetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.sds.ssa.fragment.update.UpdateDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.sds.ssa.fragment.app.ScreenshotActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.sds.ssa.search.SearchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppBaseTheme" >
        </activity>
        
        <activity
            android:name="com.sds.ssa.tablet.ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme" >
        </activity>
        <activity
            android:name="com.sds.ssa.tablet.ItemDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme"
            android:parentActivityName="com.sds.ssa.tablet.ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sds.ssa.tablet.ItemListActivity" />
        </activity>
    </application>

</manifest>
